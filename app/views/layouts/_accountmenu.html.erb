<div class="row">
    <div class="col-md-12">
        <div class="dropdown float-right account-menu">

            <% if logged_in? %>
                <a class="nav-link dropdown-toggle account-menu" href="" id="navbarDropdownMenuLink" data-toggle="dropdown">
                    Hi, <%= current_user.name %>
                </a>
                <ul class="dropdown-menu" >
                    <li class="dropdown-item"><%= link_to "My Profile", current_user, class: "account-menu-item" %></li>
                    <li class="dropdown-item"><%= link_to "Edit Profile", edit_user_path(current_user), class: "account-menu-item" %></li>
                    <li class="dropdown-divider"></li>
                    <li class="dropdown-item"><%= link_to "Logout", logout_path, method: :delete, class: "account-menu-item" %></li>
                </ul>

            <% else %>
                <ul class="nav-item">
                    <%= link_to "Login", login_path, class: "nav-link" %>
                </ul>        

            <% end %>
        </div>
    </div>
</div>
