<!DOCTYPE html>
<html>
  <head>

    <title><%= :title.empty? ? "Music Festival" : yield(:title)  %></title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key='+Rails.application.credentials.google_maps_api_key %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= yield(:head_tags) %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>" <%= yield(:body_attributes) %> >
    <%= render 'layouts/header' %>
    <div class="container-fluid">

        <% flash.each do |message_type, message| %>
          <div class="alert alert-<%= message_type %>">
            <%= message %>
            <button class="close" data-dismiss="alert">&times;</button>
          </div>
        <% end %>


      <%= yield %>

      <%= render 'layouts/footer' %>

    </div>

    <%= debug(params) if Rails.env.development? %>

  </body>
</html>



