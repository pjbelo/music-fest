<% if logged_in? %>

  <h1>Types</h1>

  <div class="col-md-8 offset-md-2">
    <table class="table table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @types.each do |type| %>
          <tr>
            <td><%= type.name %></td>
            <td><%= link_to 'Show', type, class: "btn btn-outline-primary btn-sm" %></td>
            <td><%= link_to 'Edit', edit_type_path(type), class: "btn btn-outline-primary btn-sm" %></td>
            <% if type.has_no_restrict_dependent? %>
              <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
            <% else %>
              <td><%= link_to 'Destroy', type, class: "btn btn-outline-danger btn-sm disabled" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Type', new_type_path, class: "btn btn-primary" %>
  </div>

<% else %>
  <% controller.redirect_to '/' %>
<% end %>

